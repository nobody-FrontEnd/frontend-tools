{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/*"],
      "~/*": ["./*"],
      "_c/*": ["src/components/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost", "ES2016"]
  }
}
